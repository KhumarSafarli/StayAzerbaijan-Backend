@model StayAzerbaijan.ViewModels.ReservationVM
@{
    ViewData["Title"] = "Reservation";
}
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../scss/main.css" />

    <link rel="stylesheet"
          type="text/css"
          href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <script type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script defer src="../common/subscribe.js"></script>
    <script defer src="../common/burger-menu.js"></script>
    <script defer src="../common/book.js"></script>
    <script defer src="../common/trending.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script defer src="../common/checkout.js"></script>
    <title>Otellər</title>
</head>
<div class="hotel-details-section" style="background-image: url('@Url.Content("~/../assets/images/" + Model.Hotel.sliderImgUrl)');">

    <div class="hotel-name-header">
        <h1 class="hotel-name">@Model.Hotel.Name</h1>
    </div>
    <div class="hotel description">
        <p class="desc-text">@Model.Hotel.Description</p>
    </div>
</div>
<div class="reservation">
    <h4>Rezervasiya planınız:</h4>
    <div class="reserve-box">
        <div class="top">
            <div class="room-img">
                <img src="../assets/images/@Model.Hotel.MainImgUrl" id="hotel-img" class="zoomable" />
                <img src="../assets/icons/zoom.svg" class="zoom-icon" />
            </div>

            <div class="room-price-info">
                <p class="hotel-name"><img src="../assets/icons/hotel-building.svg" />Otel: @Model.Hotel.Name</p>
                <p class="room-type"><img src="../assets/icons/house.svg" />Otaq tipi: Deluxe Standart Room</p>

                <p class="bed-type"><img src="../assets/icons/bed.svg" />Yataq tipi: 1 king size bed</p>
                <p class="meal-type" style="padding: 0; border: none; display: flex; flex-direction: row;"><img src="../assets/icons/food.svg" /> Qidalanma: BB</p>
                <p class="pax-number"><img src="../assets/icons/pax.svg" />Nəfər sayı: @Model.PaxCount</p>
                <p class="nights"><img src="../assets/icons/moon.svg" />Gecə sayı: @Model.CheckOutDate.Subtract(Model.CheckInDate).Days</p>
                <p class="date"><img src="../assets/icons/calendar.svg" />Tarixlər: @Model.CheckInDate.ToShortDateString() - @Model.CheckOutDate.ToShortDateString()</p>
                <p class="landscape"><img src="../assets/icons/landscape.svg" />Mənzərə: Dağ mənzərəli</p>
                <p class="cancellation-policy"><img src="../assets/icons/cancellation.svg" />Ləğv etmə: Bu rezervasiya ləğv edilmir. </p>
            </div>
        </div>
    </div>

        <div class="bottom">
            <h5>Adına rezervasiya olacaq şəxsin kontakt məlumatlarını daxil edin:</h5>
            <div class="form-container">

                <form id="reservation-form" class="needs-validation">
                    <div class="form-group">
                        <label for="first-name">Ad:</label>
                        <input type="text" id="first-name" name="first-name" required>
                    </div>
                    <div class="form-group">
                        <label for="last-name">Soyad:</label>
                        <input type="text" id="last-name" name="last-name" required>
                    </div>
                    <div class="form-group">
                        <label for="passport-number">Passport nömrəsi:</label>
                        <input type="text" id="passport-number" name="passport-number" required>
                    </div>
                    <div class="form-group">
                        <label for="phone-number">Mobil nömrə:</label>
                        <input type="tel" id="phone-number" name="phone-number" required>
                    </div>
                    <div class="form-group">
                        <label for="transfer-option">Transfer:</label>
                        <select id="transfer-option" name="transfer-option">
                            <option value="no-transfer">No Transfer</option>
                            <option value="standard">Standart</option>
                            <option value="business">Business</option>
                            <option value="viano">Viano</option>
                            <option value="neoplan">Neoplan</option>
                        </select>
                        <p class="qeyd">*Qeyd: Rezervasiyanız təsdiqləndikdən sonra transfer sizinlə əlaqə saxlayaraq, pickup ünvanını dəqiqləşdirəcək.</p>
                    </div>


                </form>
            </div>


            <div class="additional-transfer"></div>
            <div class="price-checkout">
                <p class="total price"></p>
                <a href="#" class="checkout"></a>
            </div>
            <div class="container">

                <div class="row">
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Səbət</span>
                            <span class="badge badge-secondary badge-pill">3</span>
                        </h4>
                        <ul class="list-group mb-3 sticky-top">


                            <li class="list-group-item d-flex justify-content-between">
                                <span>Toplam:</span>
                                <strong id="total-price">@Model.Hotel.Price</strong>
                            </li>


                        </ul>
                        <form class="card p-2" asp-action="Reservation" asp-controller="Reservation" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Promokod" name="promoCode" id="promo-code-input">

                                <div class="input-group-append">
                                    <button id="apply-promo-code-btn" type="button" class="btn btn-secondary">Tətbiq et</button>
                                </div>
                            </div>
                        </form>



                    </div>
                    <div class="col-md-8 order-md-1">
                        <form class="needs-validation" novalidate="">
                            <hr class="mb-4">
                            <h4 class="mb-3">Ödəniş üsulu</h4>
                            <div class="d-block my-3">
                                <div class="custom-control custom-radio">
                                    <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                                    <label class="custom-control-label" for="credit">Kredit kart</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" required="">
                                    <label class="custom-control-label" for="debit">Debet kart</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required="">
                                    <label class="custom-control-label" for="paypal">BirKart</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="cc-name">Kartın üzərindəki ad</label>
                                    <input type="text" class="form-control" id="cc-name" pattern="[^\d]+" placeholder="" required>
                                    <small class="text-muted">Tam ad və soyad qeyd olunmalıdır</small>
                                    <div class="invalid-feedback">Kartın üzərindəki ad qeyd olunmalıdır</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="cc-number">Kartın 8 rəqəmli nömrəsi</label>
                                    <input type="text" class="form-control" id="cc-number" pattern="\d{1,8}" placeholder="" maxlength="8" required>
                                    <div class="invalid-feedback">Kart nömrəsi qeyd olunmalıdır</div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="cc-expiration">Bitmə tarixi</label>
                                    <input type="text" class="form-control" id="cc-expiration" pattern="\d{2}/\d{2}" placeholder="MM/YY" maxlength="5" title="Expiration date must be in the format MM/YY" required>
                                    <div class="invalid-feedback">Bitmə tarixi qeyd olunmalıdır</div>
                                </div>

                                <div class="col-md-3 mb-3">
                                    <label for="cc-cvv">CVV</label>
                                    <input type="text" class="form-control" pattern="\d{1,3}" id="cc-cvv" placeholder="" maxlength="3" required>
                                    <div class="invalid-feedback">CVV kod qeyd olunmalıdır</div>
                                </div>

                            </div>
                            <hr class="mb-4">
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Ödəniş et</button>
                        </form>
                    </div>
                </div>
                <footer class="my-5 pt-5 text-muted text-center text-small">
                    <p class="mb-1">© 2017-2024 Stay Azerbaijan</p>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">Privacy</a></li>
                        <li class="list-inline-item"><a href="#">Terms</a></li>
                        <li class="list-inline-item"><a href="#">Support</a></li>
                    </ul>
                </footer>
            </div>
            <div class="hotel-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387064.59319331875!2d-74.85543251037599!3d40.719290332250566!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c3a4def1455eb7%3A0xeaea70f31a67e79d!2sGreat%20Swamp%20National%20Wildlife%20Refuge%20Wilderness%20Area!5e0!3m2!1sru!2saz!4v1709293456215!5m2!1sru!2saz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const transferOptionSelect = document.getElementById('transfer-option');
            const totalPriceElement = document.getElementById('total-price');
            const promoCodeInput = document.getElementById('promo-code-input');
            const applyPromoCodeBtn = document.getElementById('apply-promo-code-btn');
            let promoCodeApplied = false;
            function updateTotalPrice() {
                const selectedTransferOption = transferOptionSelect.value;
                let totalPrice = parseFloat('@Model.TotalPrice');
                switch (selectedTransferOption) {
                    case 'standard':
                        totalPrice += 100;
                        break;
                    case 'business':
                        totalPrice += 320;
                        break;
                    case 'viano':
                        totalPrice += 200;
                        break;
                    case 'neoplan':
                        totalPrice += 600;
                        break;
                    default:
                        break;
                }

                totalPriceElement.textContent = totalPrice.toFixed(2) + ' AZN';
            }
            transferOptionSelect.addEventListener('change', updateTotalPrice);

            applyPromoCodeBtn.addEventListener('click', function () {
                const promoCode = promoCodeInput.value.trim();
                if (promoCode !== '' && !promoCodeApplied) {

                    fetch(`/Reservation/ApplyPromoCode?promoCode=${promoCode}`)
                        .then(response => {
                            if (response.ok) {

                                response.json().then(discountAmount => {

                                    let totalPrice = parseFloat(totalPriceElement.textContent);

                                    totalPrice -= discountAmount;
                                    totalPriceElement.textContent = totalPrice.toFixed(2) + ' AZN';

                                    promoCodeApplied = true;
                                });
                            } else {
                                alert('Belə promokod mövcud deyil.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('An error occurred while processing your request. Please try again.');
                        });
                } else if (promoCodeApplied) {
                    alert('Bu promokod artıq istifadə olunub.');
                } else {
                    alert('Zəhmət olmasa promokodu daxil edin.');
                }
            });
            updateTotalPrice();
        });

    </script>

